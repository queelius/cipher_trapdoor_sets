\NewDocumentCommand{\ASet}{moo}{%
    \IfNoValueTF{#3}
    {
        \IfNoValueTF{#2}
            {\Set{#1}[][*]}
            {\Set{#1}[#2][*]}
    }
    {\Set{#1}[#2][#3]}
}

\NewDocumentCommand{\PASet}{mo}{%
    \IfNoValueTF{#2}
        {\ASet{#1}[][+]}
        {\ASet{#1}[#2][+]}
}

\NewDocumentCommand{\NASet}{mo}{%
    \IfNoValueTF{#2}
        {\ASet{#1}[][-]}
        {\ASet{#1}[#2][-]}
}

\NewDocumentCommand{\OSet}{mo}{%
    \IfNoValueTF{#2}
        {\Set{\check{#1}}}
        {\Set{\check{#1}}[#2]}
}

\NewDocumentCommand{\OASet}{mo}{%
    \IfNoValueTF{#2}
        {\ASet{\check{#1}}[]}
        {\ASet{\check{#1}}[#2]}
}

\NewDocumentCommand{\OPASet}{mo}{%
    \IfNoValueTF{#2}
        {\PASet{\check{#1}}[]}
        {\PASet{\check{#1}}[#2]}
}

\NewDocumentCommand{\ONASet}{mo}{%
    \IfNoValueTF{#2}
        {\PASet{\check{#1}}[]}
        {\PASet{\check{#1}}[#2]}
}

