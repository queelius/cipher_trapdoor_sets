}

\NewDocumentCommand{\Entropy}{mo}{%
    \FunctionFamily{\mathcal{H}}{#1}[#2]
}

\NewDocumentCommand{\Likelihood}{mo}{%
    \FunctionFamily{\mathcal{L}}{#1}[#2]
